/* pages/camera/camera.wxss */
camera{
  height: 100%;
  width: 100%;
  position: relative;
}
.reference{
  display: flex;
  height: 100%;
  width: 100%;
  flex-wrap: wrap;
}
.reference view{
  width: 250rpx;
  border-right: solid 1px #fff;
  border-bottom: solid 1px #fff;
  box-sizing: border-box;
}
.reference view:nth-child(3n+0){
  border-right: none;
}
.reference view:nth-child(n+7){
  border-bottom: none;
}
.tools{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
}
.tools .outCir{
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
  border: 3px #fff solid;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tools .outCir .inside{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  /* border: 4px #fff solid; */       
  background-color: #fff;
}
.tools .outCir .inside:active{
background-color: rgb(196, 195, 195);
}
